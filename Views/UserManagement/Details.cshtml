@model UserManagementViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid row text-left">
    <div class="col-md-10">
        <h1>User Details</h1>
    </div>
</div>

<div class="border containter mt-md-4">
    <div class="mt-md-4">
        <div class="form-group row">
            <div class="col-1 ml-2">
                <div class="form-check-label">User Name</div>
            </div>
            <div class="col-3">
                <div class="form-control text-left">@Model.Username</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1 ml-2">
                <div class="form-check-label">Name</div>
            </div>
            <div class="col-3">
                <div class="form-control text-left">@Model.Name</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1 ml-2">
                <div class="form-check-label" d-inline">Email Address</div>
            </div>
            <div class="col-3">
                <div class="form-control text-left">@Model.Email</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1 ml-2">
                <div class="form-check-label" d-inline">User Role</div>
            </div>
            <div class="col-3">
                <div class="form-control text-left">@Model.Roles.Find(r => r.Id == @Model.RoleId)</div>
            </div>
        </div>
    </div>

    <hr>

    <div class="form-group row">
        <div class="col-2">
                <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary form-control ml-3 mr-3">Edit</a>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="btn btn-danger form-control text-white ml-auto">Cancel</a>
        </div>
    </div>
</div>