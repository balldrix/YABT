@model UserManagementViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid row text-left">
    <div class="col-md-10">
        <h1>Create User</h1>
    </div>
</div>

<div class="border containter mt-md-4">
    <form name="create-user" asp-action="Create" class="mt-md-4" id="create-user" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Username" class="form-check-label ml-2" d-inline">User Name</label>
            </div>
            <div class="col-3">
                <input asp-for="Username" class="form-control w-50 d-inline ml-2" />
            </div>
            <div class="col-3">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Name" class="form-check-label ml-2" d-inline">Name</label>
            </div>
            <div class="col-3">
                <input asp-for="Name" class="form-control w-50 d-inline ml-2" />
            </div>
            <div class="col-3">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
                <div class="form-group row">
            <div class="col-1">
                <label asp-for="Email" class="form-check-label ml-2" d-inline">Email Address</label>
            </div>
            <div class="col-3">
                <input asp-for="Email" class="form-control w-50 d-inline ml-2" />
            </div>
            <div class="col-3">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Password" class="form-check-label ml-2" d-inline">Password</label>
            </div>
            <div class="col-3">
                <input type="password" asp-for="Password" class="form-control w-50 d-inline ml-2" />
                <span asp-validation-for="Password" class="text-danger d-inline"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="ConfirmPassword" class="form-check-label ml-2" d-inline">Confirm Password</label>
            </div>
            <div class="col-3">
                <input type="password" asp-for="ConfirmPassword" class="form-control w-50 d-inline ml-2" />
                <span asp-validation-for="ConfirmPassword" class="text-danger d-inline"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="RoleId" class="form-check-label ml-2" d-inline">User Role</label>
            </div>
            <div class="col-3">
                <select type="text" asp-for="RoleId" asp-items="@(new SelectList(@Model.Roles, "Id", "Name"))" class="form-control w-50 d-inline ml-2"></select>
            </div>
        </div>

        <hr>

        <div class="form-group row">
            <div class="col-2">
                <button type="submit" class="btn btn-primary form-control ml-3 mr-3" id="create-user">Add</button>
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-danger form-control text-white ml-auto">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}