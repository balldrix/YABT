@model HomeViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container row text-left">
    <h1>Welcome to YABT</h1>
</div>

<div class="container-fluid">
    <div class="row">

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Projects</h3>
                    @if(Model.Projects.Count() > 0)
                    {
                        <table class="table table-sm table-bordered table-secondary">
                        <tbody>
                            @foreach(var project in Model.Projects)
                            {
                                <tr>

                                    <td class="text-left">
                                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id">@project.Name</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <text>No Projects Found</text>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Tickets</h3>
                    @if(Model.Tickets.Count() > 0)
                    {
                        <table class="table table-sm table-bordered table-secondary">
                            <thead>
                                <tr>
                                    <th>Priority</th>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach(var ticket in Model.Tickets)
                            {
                                <tr>
                                    <td class="text-left">
                                        @ticket.Priority.Name
                                    </td>
                                    <td class="text-left">
                                      <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id">@ticket.Title</a>
                                    </td>
                                    <td class="text-left">
                                        @ticket.Type.Name
                                    </td>
                                    <td class="text-left">
                                        @ticket.State.Name
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <text>No Tickets Found</text>
                    }
                </div>
            </div>
        </div>

    </div>
</div>